{
    "name": "gentry/gentry",
    "description": "PHP unit test generation tools",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marijn Ophorst",
            "email": "marijn@monomelodies.nl"
        }
    ],
    "require": {
        "php": ">=7",
        "zeptech/annotations": "^1.0.0",
        "monomelodies/kingconf": "^1.0",
        "simoneast/simple-ansi-colors": "^1.0",
        "jonnyw/php-phantomjs": "4.*",
        "psr/cache": "^1.0"
    },
    "bin": [
        "gentry"
    ],
    "autoload": {
        "psr-4": {
            "Gentry\\Gentry\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gentry\\Gentry\\": "src",
            "Gentry\\Gentry\\Tests\\": "tests",
            "Gentry\\Gentry\\Demo\\": "demo"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ],
        "post-update-cmd": [
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    }
}
